<div class="main tasks-index">
  <h2>予定一覧</h2>
  <div class="container">
    <div class="tasks-index-item">
      予定名　｜　
      日付　｜　
      備考
    </div>
    <% @tasks.each do |task| %>
      <div class="tasks-index-item">
        <%= task.title %>　｜　
        <%= task.dayoftask %>　｜　
        <%= task.comment %>
        <%= link_to '編集', edit_task_path(task) %>
        <%= link_to '削除', task_path(task), method: :delete %>
      </div>
    <% end %>
  </div>
  <%= link_to '追加', new_task_path %>
  <br>
  <%= link_to 'トップへ戻る', '/' %>
</div>